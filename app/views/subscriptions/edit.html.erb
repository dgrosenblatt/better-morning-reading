<div class="subscription-edit">
  <%= simple_form_for(@subscription, url: book_subscription_path(@subscription.book, @subscription)) do |f| %>
    <div class="book-details">
      <h1><%= @book.name %>
      <p class="detail"><%= @book.author %></p>
  </div>
    <% if @subscription.errors.any? %>
      <div class="errors-container">
        <%= f.error_notification %>
        <% @subscription.errors.full_messages.each do |message| %>
          <ul>
            <li class="subscription-error">➡️ <%= message %></li>
          </ul>
        <% end %>
      </div>
    <% end %>
    <p class="detail">Update your weekly schedule:</p>
    <div class="new-subscription-inputs-container">
      <div class="book-image"><%= image_tag @book.cover_image_full_url %></div>
      <div class="form-inputs">
        <%= f.input :sunday %>
        <%= f.input :monday %>
        <%= f.input :tuesday %>
        <%= f.input :wednesday %>
        <%= f.input :thursday %>
        <%= f.input :friday %>
        <%= f.input :saturday %>
      </div>
    </div>

    <p>You'll receive a chapter in your email on each day selected until the book is finished.</p>

    <div><%= f.button :submit, "Save", id: "new-subscription-submit" %></div>
  <% end %>
</div>
