<div class="registrations-new">
  <div class="left-panel"></div>
  <div class="right-panel">
    <h2 class="sign-in-title">Welcome!</h2>
    <p>Joining Better Morning Reading is free. With a free account:</p>
    <ul class="details-list">
      <li> ğŸ“š Read from our collection of public domain books</li>
      <li> ğŸ•µï¸â€â™€ï¸ Select a book and choose your weekly schedule</li>
      <li> ğŸ“¬ Receive a chapter in your email in the morning of each day you choose</li>
      <li> â¤ï¸ After, you can support the site and continue reading for $12/year</li>
    </ul>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
        <div class="errors-container">
          <%= f.error_notification %>
          <% resource.errors.full_messages.each do |message| %>
            <ul>
              <li class="subscription-error">â¡ï¸ <%= message %></li>
            </ul>
          <% end %>
        </div>
      <% end %>
      <% puts "email is #{@email}"%>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    error: false,
                    input_html: { value: "#{@email}", autocomplete: "email" }%>
        <%= f.input :name,
                    required: true,
                    autofocus: true,
                    error: false,
                    input_html: { autocomplete: "name" }%>
        <%= f.input :password,
                    required: true,
                    error: false,
                    hint: ("(Must be at least #{@minimum_password_length} characters)" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", minlength: 8 } %>
        <%= f.input :password_confirmation,
                    required: true,
                    error: false,
                    input_html: { autocomplete: "new-password", minlength: 8 } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign Up", class: "new-session-submit" %>
      </div>
    <% end %>

  </div>
</div>

