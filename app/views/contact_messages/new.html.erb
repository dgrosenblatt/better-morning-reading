<div class="contact-new">
  <section class="content">
    <%= simple_form_for(@contact_message, url: contact_messages_path) do |f| %>
      <h1>Send Us a Message</h1>
      <p>We'd love to hear from you.</p>

      <% if @contact_message.errors.any? %>
        <div class="errors-container">
          <%= f.error_notification %>
          <% @contact_message.errors.full_messages.each do |message| %>
            <ul>
              <li class="message-error">➡️ <%= message %></li>
            </ul>
          <% end %>
        </div>
      <% end %>

      <%= f.input :reply_email, error: false %>
      <%= f.input :message, error: false, input_html: { rows: 10 } %>
      <div class="message-button-container"><%= f.button :submit, "Send Message" %></div>

    <% end %>
  </section>
</div>
